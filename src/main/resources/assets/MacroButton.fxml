            </TabPane>
        </content>
    </Tab>
    <Tab fx:id="btnCommandProfile" text="Profile">
        <content>
            <VBox spacing="15.0">
                <children>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Select a profile to switch to"/>
                    <ChoiceBox fx:id="profileDropdown" prefHeight="31.0" prefWidth="251.0" HBox.hgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets left="8.0" right="8.0" top="8.0"/>
                </padding>
            </VBox>
        </content>
    </Tab>
