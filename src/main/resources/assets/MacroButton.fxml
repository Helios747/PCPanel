<TabPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="209.0" prefWidth="376.0" rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.getpcpanel.ui.MacroButtonController">
    <Tab fx:id="btnCommandNoop" text="No action">
        <VBox spacing="15.0">
            <padding>
                <Insets left="8.0" top="8.0"/>
            </padding>
            <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="No action will be performed"/>
        </VBox>
    </Tab>
    <Tab fx:id="btnCommandKeystroke" text="Keystroke">
        <VBox layoutX="181.0" layoutY="200.0" spacing="15.0">
            <padding>
                <Insets left="8.0" right="8.0" top="8.0"/>
            </padding>
            <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="205.0" text="Enter a keystroke"/>
            <HBox spacing="10.0">
                <TextField fx:id="keystrokeField" editable="false" prefHeight="27.0" prefWidth="278.0" HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#clearKeystroke" text="Clear"/>
            </HBox>
        </VBox>
    </Tab>
    <Tab fx:id="btnCommandShortcut" text="Shortcut">
        <VBox layoutX="102.0" layoutY="208.0" spacing="15.0">
            <padding>
                <Insets left="8.0" right="8.0" top="8.0"/>
            </padding>
            <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Enter a command or file to launch"/>
            <HBox spacing="10.0">
                <TextField fx:id="shortcutField" prefHeight="27.0" prefWidth="290.0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="scFileButton" mnemonicParsing="false" onAction="#scFile" prefHeight="25.0" prefWidth="34.0" text="..."/>
            </HBox>
        </VBox>
    </Tab>
    <Tab fx:id="btnCommandMedia" styleClass="only-windows" text="Music Control">
        <VBox spacing="15.0">
            <padding>
                <Insets left="8.0" top="8.0"/>
            </padding>
            <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Select a control"/>
            <RadioButton fx:id="playPause" mnemonicParsing="false" selected="true" text="Play/Pause">
                <toggleGroup>
                    <ToggleGroup fx:id="mediagroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="stop" mnemonicParsing="false" text="Stop" toggleGroup="$mediagroup"/>
            <RadioButton fx:id="prev" mnemonicParsing="false" text="Previous Track" toggleGroup="$mediagroup"/>
            <RadioButton fx:id="next" mnemonicParsing="false" text="Next Track" toggleGroup="$mediagroup"/>
            <RadioButton fx:id="mute" mnemonicParsing="false" text="Mute" toggleGroup="$mediagroup"/>
            <Label text="Check this box to ensure that only Spotify is controlled. If this is not checked then any application that is playing sounds might be controlled." wrapText="true">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Label>
            <CheckBox fx:id="cmdMediaSpotify" mnemonicParsing="false" text="Target Spotify">
                <VBox.margin>
                    <Insets top="-10.0"/>
                </VBox.margin>
            </CheckBox>
        </VBox>
    </Tab>
    <Tab fx:id="btnCommandEndProgram" text="End Program">
        <content>
            <VBox spacing="15.0">
                <padding>
                    <Insets left="8.0" right="8.0" top="8.0"/>
                </padding>
                <children>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Select a process to kill"/>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <children>
                            <RadioButton fx:id="rdioEndSpecificProgram" mnemonicParsing="false" onAction="#onRadioButton" selected="true" text="Specific Program">
                                <toggleGroup>
                                    <ToggleGroup fx:id="endProgramGroup"/>
                                </toggleGroup>
                            </RadioButton>
                            <TextField fx:id="endProcessField" prefHeight="27.0" prefWidth="330.0" promptText="spotify.exe" HBox.hgrow="ALWAYS">
                                <HBox.margin>
                                    <Insets left="5.0"/>
                                </HBox.margin>
                            </TextField>
                            <Button fx:id="findAppEndProcess" mnemonicParsing="false" onAction="#findApps" prefHeight="31.0" prefWidth="34.0" text="..."/>
                        </children>
                    </HBox>
                    <RadioButton fx:id="rdioEndFocusedProgram" mnemonicParsing="false" onAction="#onRadioButton" text="Focused Program" toggleGroup="$endProgramGroup"/>
                </children>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeDefaultDevice" text="Sound Device">
        <content>
            <VBox spacing="15.0">
                <padding>
                    <Insets left="8.0" right="8.0" top="8.0"/>
                </padding>
                <children>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Select a sound device to use"/>
                    <ChoiceBox fx:id="sounddevices" prefHeight="31.0" prefWidth="588.0" HBox.hgrow="ALWAYS"/>
                </children>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeDefaultDeviceAdvanced" styleClass="only-windows" text="Sound Device Advanced">
        <content>
            <fx:include fx:id="defaultDeviceAdvanced" source="AdvancedDevices.fxml"></fx:include>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeApplicationDeviceToggle" styleClass="only-windows" text="Application Sound Device">
        <content>
            <ScrollPane fitToWidth="true">
                <VBox spacing="15.0">
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Select a program to toggle"/>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <children>
                            <RadioButton fx:id="rdioApplicationDeviceSpecific" mnemonicParsing="false" onAction="#onRadioButton" selected="true" text="Specific Program">
                                <toggleGroup>
                                    <ToggleGroup fx:id="volumeApplicationDeviceGroup"/>
                                </toggleGroup>
                            </RadioButton>
                            <fx:include fx:id="applicationDeviceProcesses" source="PickProcesses.fxml"/>
                        </children>
                    </HBox>
                    <RadioButton fx:id="rdioApplicationDeviceFocus" mnemonicParsing="false" onAction="#onRadioButton" text="Focused Program" toggleGroup="$volumeApplicationDeviceGroup"/>

                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Toggle devices"/>
                    <fx:include fx:id="applicationDeviceDevices" source="AdvancedDevices.fxml"></fx:include>
                    <Button mnemonicParsing="false" onAction="#addApplicationDevice" prefHeight="25.0" prefWidth="73.0" text="Add"/>
                </VBox>
            </ScrollPane>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeDefaultDeviceToggle" text="Toggle Device">
        <content>
            <VBox spacing="15.0">
                <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </padding>
                <children>
                    <Label prefHeight="71.0" prefWidth="660.0"
                           text="Select multiple sound devices to toggle in between.&#10;Drag sound devices from the left list to the right list.&#10;Everytime you click, the default sound device will be rotated between the list."
                           wrapText="true"/>
                    <GridPane hgap="10.0" prefHeight="297.0" prefWidth="676.0" vgap="5.0" VBox.vgrow="ALWAYS">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <Label prefHeight="25.0" prefWidth="153.0" text="Available Devices"/>
                            <Label prefHeight="25.0" prefWidth="153.0" text="Selected Devices" GridPane.columnIndex="1"/>
                            <ListView fx:id="soundDeviceSource" prefHeight="150.0" prefWidth="164.0" GridPane.rowIndex="1"/>
                            <ListView fx:id="soundDevices2" prefHeight="150.0" prefWidth="164.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        </children>
                    </GridPane>
                </children>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeDefaultDeviceToggleAdvanced" styleClass="only-windows" text="Toggle Device Advanced">
        <content>
            <ScrollPane fitToWidth="true">
                <VBox fillWidth="true">
                    <fx:include fx:id="defaultDeviceToggleAdvanced" source="AdvancedDevices.fxml"></fx:include>
                    <Button mnemonicParsing="false" onAction="#addDefaultDeviceToggleAdvanced" prefHeight="25.0" prefWidth="73.0" text="Add"/>
                </VBox>
            </ScrollPane>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeProcessMute" text="Mute App">
        <content>
            <VBox spacing="15.0">
                <padding>
                    <Insets left="8.0" right="8.0" top="8.0"/>
                </padding>
                <children>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Enter an application to mute"/>
                    <fx:include fx:id="appMute" source="PickProcesses.fxml"/>

                    <RadioButton fx:id="rdio_mute_toggle" mnemonicParsing="false" selected="true" text="Toggle Mute/Unmute">
                        <toggleGroup>
                            <ToggleGroup fx:id="xxx"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="rdio_mute_mute" mnemonicParsing="false" text="Mute" toggleGroup="$xxx"/>
                    <RadioButton fx:id="rdio_mute_unmute" mnemonicParsing="false" text="Unmute" toggleGroup="$xxx"/>
                </children>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeFocusMute" text="Focus Mute">
        <content>
            <VBox spacing="15.0">
                <padding>
                    <Insets left="8.0" top="8.0"/>
                </padding>
                <children>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Control currently focused Application"/>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="76.0" text="The button will control the mute state of the application that is in focus at the time." wrapText="true"/>

                    <RadioButton fx:id="rdio_focus_mute_toggle" mnemonicParsing="false" selected="true" text="Toggle Mute/Unmute">
                        <toggleGroup>
                            <ToggleGroup fx:id="focusMuteToggle"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="rdio_focus_mute_mute" mnemonicParsing="false" text="Mute" toggleGroup="$focusMuteToggle"/>
                    <RadioButton fx:id="rdio_focus_mute_unmute" mnemonicParsing="false" text="Unmute" toggleGroup="$focusMuteToggle"/>
                </children>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVolumeDeviceMute" text="Mute Device">
        <content>
            <VBox spacing="15.0">
                <children>
                    <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Enter a device to mute"/>
                    <RadioButton fx:id="rdio_muteDevice_Default" mnemonicParsing="false" onAction="#onRadioButton" selected="true" text="Default Device">
                        <toggleGroup>
                            <ToggleGroup fx:id="muteDeviceGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <RadioButton fx:id="rdio_muteDevice_Specific" mnemonicParsing="false" onAction="#onRadioButton" text="Specific Device" toggleGroup="$muteDeviceGroup"/>
                            <ChoiceBox fx:id="muteSoundDevice" prefHeight="31.0" prefWidth="524.0" HBox.hgrow="ALWAYS"/>
                        </children>
                    </HBox>
                    <Label text="Mute Mode"/>
                    <RadioButton fx:id="rdio_muteDevice_toggle" mnemonicParsing="false" selected="true" text="Toggle Mute/Unmute">
                        <toggleGroup>
                            <ToggleGroup fx:id="deviceMuteGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="rdio_muteDevice_mute" mnemonicParsing="false" text="Mute" toggleGroup="$deviceMuteGroup"/>
                    <RadioButton fx:id="rdio_muteDevice_unmute" mnemonicParsing="false" text="Unmute" toggleGroup="$deviceMuteGroup"/>
                </children>
                <padding>
                    <Insets left="8.0" right="8.0" top="8.0"/>
                </padding>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandObs" text="OBS">
        <content>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </padding>
                <RadioButton fx:id="obs_rdio_SetScene" mnemonicParsing="false" onAction="#onRadioButton" selected="true" text="Set Scene">
                    <toggleGroup>
                        <ToggleGroup fx:id="obsButtonMainGroup"/>
                    </toggleGroup>
                </RadioButton>
                <VBox>
                    <children>
                        <HBox fx:id="obsPaneSetScene" alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefHeight="21.0" prefWidth="73.0" text="Scene:"/>
                                <ChoiceBox fx:id="obsSetScene" prefHeight="31.0" prefWidth="345.0"/>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                </VBox>
                <RadioButton fx:id="obs_rdio_MuteSource" mnemonicParsing="false" onAction="#onRadioButton" text="Mute Source" toggleGroup="$obsButtonMainGroup"/>
                <VBox fx:id="obsPaneMuteSource" spacing="5.0">
                    <VBox.margin>
                        <Insets left="20.0"/>
                    </VBox.margin>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefHeight="21.0" prefWidth="73.0" text="Source:"/>
                                <ChoiceBox fx:id="obsSourceToMute" prefHeight="31.0" prefWidth="345.0"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </HBox>
                        <RadioButton fx:id="obsMuteToggle" mnemonicParsing="false" selected="true" text="Toggle Mute/Unmute">
                            <toggleGroup>
                                <ToggleGroup fx:id="obsMute"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="obsMuteMute" mnemonicParsing="false" text="Mute" toggleGroup="$obsMute"/>
                        <RadioButton fx:id="obsMuteUnmute" mnemonicParsing="false" text="Unmute" toggleGroup="$obsMute"/>
                    </children>
                </VBox>
            </VBox>
        </content>
    </Tab>
    <Tab fx:id="btnCommandVoiceMeeter" text="Voicemeeter">
        <content>
            <TabPane fx:id="voicemeeterTabPaneButton" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Basic">
                        <content>
                            <VBox spacing="15.0">
                                <children>
                                    <GridPane alignment="CENTER_LEFT" vgap="10.0">
                                        <children>
                                            <Label text="Input/Output"/>
                                            <Label text="Index" GridPane.rowIndex="1"/>
                                            <ChoiceBox fx:id="voicemeeterBasicButtonIO" prefWidth="150.0" GridPane.columnIndex="1"/>
                                            <ChoiceBox fx:id="voicemeeterBasicButtonIndex" prefHeight="31.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                            <Label text="Button" GridPane.rowIndex="2"/>
                                            <ChoiceBox fx:id="voicemeeterBasicButton" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        </children>
                                        <columnConstraints>
                                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="411.0" minWidth="10.0" prefWidth="173.0"/>
                                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="703.0" minWidth="10.0" prefWidth="658.0"/>
                                        </columnConstraints>
                                        <rowConstraints>
                                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        </rowConstraints>
                                    </GridPane>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
