<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<Tab text="End Program" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="com.getpcpanel.ui.command.button.BtnEndProgramController">
    <VBox spacing="15.0">
        <padding>
            <Insets left="8.0" right="8.0" top="8.0"/>
        </padding>
        <Label maxWidth="1.7976931348623157E308" prefHeight="25.0" text="Select a process to kill"/>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <RadioButton fx:id="rdioEndSpecificProgram" mnemonicParsing="false" onAction="#onRadioButton" selected="true" text="Specific Program">
                <toggleGroup>
                    <ToggleGroup fx:id="endProgramGroup"/>
                </toggleGroup>
            </RadioButton>
            <TextField fx:id="endProcessField" prefHeight="27.0" prefWidth="330.0" promptText="spotify.exe" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="5.0"/>
                </HBox.margin>
            </TextField>
            <Button fx:id="findAppEndProcess" mnemonicParsing="false" onAction="#findApps" prefHeight="31.0" prefWidth="34.0" text="..."/>
        </HBox>
        <RadioButton fx:id="rdioEndFocusedProgram" mnemonicParsing="false" onAction="#onRadioButton" text="Focused Program" toggleGroup="$endProgramGroup"/>
    </VBox>
</Tab>
